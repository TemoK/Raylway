<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="ge.biletebi.tickets" version="1.4.4" versionCode="22">
    <name>Biletebi.Ge</name>
    <description>
        Biletebi.Ge - Mobile App
    </description>
    
    <author email="support@biletebi.ge" href="http://biletebi.ge">
        Biletebi.Ge Team
    </author>
  
        
    <content src="index.html"/>
    <access origin="*"/>
    
    <preference name="show-splash-screen-spinner" value="true" />           <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
    <preference name="auto-hide-splash-screen"    value="true" />           <!-- ios: if set to false, the splash screen must be hidden using a JavaScript API -->
    
    <preference name="permissions" value="none"/>
    <preference name="phonegap-version" value="3.5.0"/>
    <preference name="Fullscreen" value="true" />
    
    <platform name="android">
        <preference name="android-minSdkVersion" value="13" />
        <preference name="android-targetSdkVersion" value="19" />
        <icon src="res/icon/default/icon.png"/>
    </platform>

    <platform name="ios">
        <icon src="res/icon/ios/icon.png" width="57" height="57" />
        <icon src="res/icon/ios/icon-2x.png" width="114" height="114" />

        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/ios/icon-57.png" width="57" height="57" />
        <icon src="res/icon/ios/icon-57-2x.png" width="114" height="114" />
		
        <icon src="res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/icon-60-2x.png" width="120" height="120" />

        <!-- iPad -->
        <icon src="res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/icon-72-2x.png" width="144" height="144" /> 

        <!-- iPad -->
        <icon src="res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="res/icon/ios/icon-76-2x.png" width="152" height="152" />

    </platform>

    <gap:plugin name="org.apache.cordova.splashscreen" />

    <!-- Define app splash screen for each platform. -->

    <gap:splash src="res/screen/ios/screen-iphone-portrait.png"         gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png"      gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png"           gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png"          gap:platform="ios"     width="1024" height="768" />

    

</widget>
